            <div class="palabra">
                <h1>¡Panaderia Cliente!</h1>
            </div>
          





          
        </section>

        <section id="textos">

            <div>
                <h1>Registrar producto</h1>
            </div>

            <div class="labels">

                <p>Nombre del producto</p>
                <p>Precio del producto</p>
                <p>Codigo del producto</p>
                <p class="imagen">Imagen del producto</p>

            </div>

            <div class="cajas-texto">

                <input class="buscador1" type="text" @bind-value="@producto.NombreProduc">
                <input class="buscador2" type="text"@bind-value="@producto.PrecioProduc">
                <input class="buscador3" type="text" @bind-value="@producto.CodigoProduc"/> 
                <input class="Buscador4" type="text" @bind-value="@producto.ProveedorId" />
              


            </div>
            <div class="boton-imagen">
                <input type="file" id="file"
                <label for="file">
                    Adjuntar

                </label>
            </div>

            <div class="boton-producto">

                <label for="submit">
                    Alquilar Producto
                </label>
                @*<input type="submit" @onclick="Grabar" value="Save"  />*@
                <button class="btn btn-primary" @onclick="Grabar">Alquilar producto</button>
              

            </div>

        </section>

    </header>


 

